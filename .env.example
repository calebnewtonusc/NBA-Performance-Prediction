# NBA Prediction API Configuration
# Copy this file to .env and customize the values

# API Security
SECRET_KEY=generate-a-long-random-secret-key-here-use-openssl-rand-hex-32

# Authentication (REQUIRED for production)
# DO NOT use default values! Generate your own secure credentials.
API_USERNAME=your_admin_username_here

# Use bcrypt password hash (RECOMMENDED - secure)
# Generate with: python3 -c "from passlib.context import CryptContext; pwd_context = CryptContext(schemes=['bcrypt'], deprecated='auto'); print(pwd_context.hash('your_password_here'))"
API_PASSWORD_HASH=$2b$12$EXAMPLE_HASH_REPLACE_THIS_WITH_REAL_BCRYPT_HASH

# Legacy plain text password (DEPRECATED - insecure, only for development)
# API_PASSWORD=your_plain_password_here

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Limits
MAX_BATCH_SIZE=100

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Database
DATABASE_URL=postgresql://nba_user:secure_password@localhost:5432/nba_predictions

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# API Configuration
# Note: When using Docker, host and port are configured in Dockerfile.api
# These variables are for local development only
API_HOST=0.0.0.0
API_PORT=8000

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=INFO

# Generate secure SECRET_KEY with:
# python3 -c "import secrets; print(secrets.token_urlsafe(32))"
#
# Or with openssl:
# openssl rand -hex 32
